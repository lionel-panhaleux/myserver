[Unit]
Description={{r.app_name}} service
After=network-online.target

[Service]
Type=simple
StandardError=syslog
Restart=on-failure
TimeoutStopSec=3600
WorkingDirectory={{r.app_root}}
TimeoutStartSec=5
{% for key, value in r.env_vars.items() %}
Environment={{key}}={{value}}
{% endfor %}
ExecStart=/bin/bash -c 'source venv/bin/activate && {{r.command}}'

[Install]
WantedBy=multi-user.target
